set $mod Mod1
set $alt Mod4

set $primary_monitor DP-0
set $secondary_monitor DVI-D-0

# startup
exec --no-startup-id dunst -config ~/dotfiles/dunstrc
exec --no-startup-id unclutter -idle 1
exec --no-startup-id picom --experimental-backend
exec --no-startup-id polybar main
exec --no-startup-id polybar secondary
exec --no-startup-id ssh-logs
exec --no-startup-id lxsession
exec --no-startup-id greenclip daemon 

# Font for window titles
font SF Mono Powerline Bold 20

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# float certain windows
for_window [instance="origin.exe"] floating enable
for_window [instance="starwarsbattlefront.exe"] floating enable
for_window [instance="lxappearance"] floating enable
for_window [instance="pavucontrol"] floating enable
for_window [instance="arandr"] floating enable

# start a fullscreen terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+q kill

# screenshot
bindsym $mod+Shift+s exec maim -o -s ~/images/screenshots/$(date +%b-%a-%H:%M-%Y).png # save to file
bindsym $mod+Ctrl+s exec maim -o -s | xclip -selection clipboard -t image/png

# emoji picker
bindsym Ctrl+$mod+space exec rofimoji
# clipboard viewer
bindsym $alt+$mod+space exec rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' -theme ~/dotfiles/rofi_material_theme.rasi

# set client colors
client.focused #212121 #212121 #FFFFFF

# start application launcher
bindsym $mod+space exec rofi -show run -theme ~/dotfiles/rofi_material_theme.rasi

# move workspace
bindsym Ctrl+$mod+Shift+Left move workspace to output left
bindsym Ctrl+$mod+Shift+Right move workspace to output right

# move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# focus the parent container
bindsym $mod+a focus parent

# workspaces on primary display
workspace 1 output $primary_monitor
workspace 2 output $primary_monitor
workspace 3 output $primary_monitor
workspace 4 output $primary_monitor
workspace 5 output $primary_monitor
workspace 6 output $primary_monitor
workspace 7 output $primary_monitor
workspace 8 output $primary_monitor
workspace 9 output $primary_monitor
workspace 10 output $primary_monitor

# workspaces on secondary display
workspace y output $secondary_monitor
workspace u output $secondary_monitor
workspace i output $secondary_monitor
workspace o output $secondary_monitor
workspace p output $secondary_monitor
workspace bracketleft output $secondary_monitor
workspace bracketright output $secondary_monitor

# primary navigation
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# secondary navigation
bindsym $mod+y workspace y
bindsym $mod+u workspace u
bindsym $mod+i workspace i
bindsym $mod+o workspace o
bindsym $mod+p workspace p
bindsym $mod+bracketleft workspace bracketleft
bindsym $mod+bracketright workspace bracketright

# primary movement
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# secondary movement 
bindsym $mod+Shift+y move container to workspace y
bindsym $mod+Shift+u move container to workspace u
bindsym $mod+Shift+i move container to workspace i
bindsym $mod+Shift+o move container to workspace o
bindsym $mod+Shift+p move container to workspace p
bindsym $mod+Shift+bracketleft move container to workspace bracketleft
bindsym $mod+Shift+bracketright move container to workspace bracketright

# reload/restart the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window
mode "resize" {
        # vim style resizing
	bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# remove status bar from windows
for_window [class="^.*"] border pixel 0

# gaps -- not feeling them rn -- feeling them rn 10/25
gaps inner 4
gaps horizontal 4
gaps vertical 0

# no mouse stuff on hover
focus_follows_mouse no

# volume
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioLowerVolume exec amixer set Master 10%-
bindsym XF86AudioRaiseVolume exec amixer set Master 10%+

# media controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# background image
exec --no-startup-id feh --bg-fill ~/images/charlotte.jpg
