set $mod Control
set $alt_mod Mod1

# startup
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc
exec --no-startup-id compton --config ~/.config/compton.conf
exec --no-startup-id redshift -l 33.7490:84.3880
exec --no-startup-id redshift-gtk
exec --no-startup-id nm-applet

# Font for window titles. Will also be used by the bar unless a different font
font pango:SFMono 6

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a fullscreen terminal
bindsym $alt_mod+Return exec urxvt

# kill focused window
bindsym $mod+q kill

# screenshot
bindsym $alt_mod+Shift+s exec maim -s ~/images/screenshots/$(date +%b-%a-%H:%M-%Y).png # save to file

# set client colors
client.focused #212121 #212121 #FFFFFF

# start application launcher
bindsym $mod+space exec rofi -show run

bindsym $mod+$alt_mod+Shift+Left move workspace to output left
bindsym $mod+$alt_mod+Shift+Right move workspace to output righ

# alternatively, you can use the cursor keys:
bindsym $alt_mod+Left focus left
bindsym $alt_mod+Down focus down
bindsym $alt_mod+Up focus up
bindsym $alt_mod+Right focus right

# alternatively, you can use the cursor keys:
bindsym $alt_mod+Shift+Left move left
bindsym $alt_mod+Shift+Down move down
bindsym $alt_mod+Shift+Up move up
bindsym $alt_mod+Shift+Right move right

# split in horizontal orientation
bindsym $alt_mod+h split h

# split in vertical orientation
bindsym $alt_mod+v split v

bindsym $alt_mod+$mod+Left workspace prev
bindsym $alt_mod+$mod+Right workspace next

# enter fullscreen mode for the focused container
bindsym $alt_mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $alt_mod+s layout stacking
bindsym $alt_mod+w layout tabbed
bindsym $alt_mod+e layout toggle split

# toggle tiling / floating
bindsym $alt_mod+Shift+f floating toggle

# change focus between tiling / floating windows
#bindsym $alt_mod+tab focus left

# focus the parent container
bindsym $alt_mod+a focus parent

# focus the child container
#bindsym $alt_mod+d focus child

# switch to workspace
bindsym $alt_mod+1 workspace number 1
bindsym $alt_mod+2 workspace number 2
bindsym $alt_mod+3 workspace number 3
bindsym $alt_mod+4 workspace number 4
bindsym $alt_mod+5 workspace number 5
bindsym $alt_mod+6 workspace number 6
bindsym $alt_mod+7 workspace number 7
bindsym $alt_mod+8 workspace number 8
bindsym $alt_mod+9 workspace number 9
bindsym $alt_mod+0 workspace number 10
bindsym $alt_mod+u workspace u
bindsym $alt_mod+i workspace i
bindsym $alt_mod+o workspace o
bindsym $alt_mod+p workspace p

# move focused container to workspace
bindsym $alt_mod+Shift+1 move container to workspace number 1
bindsym $alt_mod+Shift+2 move container to workspace number 2
bindsym $alt_mod+Shift+3 move container to workspace number 3
bindsym $alt_mod+Shift+4 move container to workspace number 4
bindsym $alt_mod+Shift+5 move container to workspace number 5
bindsym $alt_mod+Shift+6 move container to workspace number 6
bindsym $alt_mod+Shift+7 move container to workspace number 7
bindsym $alt_mod+Shift+8 move container to workspace number 8
bindsym $alt_mod+Shift+9 move container to workspace number 9
bindsym $alt_mod+Shift+0 move container to workspace number 10
bindsym $alt_mod+Shift+u move container to workspace u
bindsym $alt_mod+Shift+i move container to workspace i
bindsym $alt_mod+Shift+o move container to workspace o
bindsym $alt_mod+Shift+p move container to workspace p

# reload/restart the configuration file
bindsym $alt_mod+Shift+c reload
bindsym $alt_mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $alt_mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window
mode "resize" {
        # vim style resizing
	bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $alt_mod+r mode "resize"

# remove status bar from windows
for_window [class="^.*"] border pixel 0

# gaps -- not feeling them rn -- feeling them rn 10/25
gaps inner 5
gaps horizontal 2
gaps vertical 2
smart_gaps on
#smart_gaps inverse_outer

# status bar
bar {
    position top
    # no scroll on mouse events
    bindsym button4 nop
    bindsym button5 nop
    bindsym button6 nop
    bindsym button7 nop
    font xft:DejaVu Sans Mono for Powerline 6.5 
    status_command /usr/bin/bumblebee-status -m spotify bluetooth nic memory sensors datetime amixer battery -p memory.format="{percent:05.02f}%" nic.format="{ssid}" datetime.format="%-m/%-d %a %-H:%M" -t iceberg-dark-powerline 
    colors {
        focused_workspace  #000000 #000000 #FFFFFF
        active_workspace   #5f676a #000000 #FFFFFF
        inactive_workspace #000000 #000000 #696969
    }
}

# no mouse stuff on hover
focus_follows_mouse no

# brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
# granular brightness
bindsym Shift+XF86MonBrightnessDown exec xbacklight -dec 1
bindsym Shift+XF86MonBrightnessUp exec xbacklight -inc 1

# keyboard backlight
bindsym XF86KbdBrightnessDown exec kbdlight down 10
bindsym XF86KbdBrightnessUp exec kbdlight up 10

# volume
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioLowerVolume exec amixer set Master 10%-
bindsym XF86AudioRaiseVolume exec amixer set Master 10%+

# media controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# app expose
bindcode 120 exec skippy-xd

# background image
exec --no-startup-id feh --bg-fill ~/images/charlotte.jpg
